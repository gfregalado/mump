<h1>Ticket</h1>


<div class="ticket-views">
  <div class="container col-sm-6">
    <div class="card ">
      <div class="card-header">
        <h3>{{ticket.[0].title}}</h3>
      </div>
      <div class="card-body">
        <img src="{{ticket.[0].imagePath}}" alt="Ticket Image" height="40%" width="40%">
        <br>

        <p class="card-text">
          {{ticket.[0].description}}
        </p>
        <a href="/close-ticket" class="btn btn-outline">Close Ticket</a>
      </div>
      <div class="card-footer text-muted">
        <strong>Open Date:</strong> {{ticket.[0].creationDate}}
      </div>
    </div>
  </div>

  {{!-- Message Board --}}

  <div class="container col-sm-6">
    <div class="card ">
      <div class="card-header">
        <h3>Message Board</h3>
      </div>
    </div>
  </div>
</div>