<div class="container-dashboard">

  <!-- 1st column on the left that contains AVATAR , MENU and LOGOUT button  -->
  <section class="left-navigator">

    <div class="user">
      <img src="/images/avatar2.png" alt="" class="user-avatar" width="100px" height="100px">
      <h5>{{ userAuthenticated.firstName }} {{ userAuthenticated.lastName }}</h5>
    </div>

    <div class="nav-buttons">
      <button class="btn btn-outline-secondary active" onclick="location.href='/staff/dashboard'"> <img class="test"
          src="/images/icons/dashboard-green.png" alt="dashboard">
        Dashboard</button>
      <button class="btn btn-outline-secondary" onclick="location.href='/staff/staff-tickets'"> <img class="test"
          src="/images/icons/ticket-grey.png" alt="ticket">Current Tickets</button>
      <button class="btn btn-outline-secondary" onclick="location.href='/staff/closed-tickets'"><img class="test"
          src="/images/icons/past-grey.png" alt="past-tickets">Closed Tickets</button>
      <button class="btn btn-outline-secondary" onclick="location.href='/staff/users'"><img class="test"
          src="/images/icons/contacts-grey.png" alt="contacts">Clients</button>
    </div>

    <div class="logout-button">
      <button onclick="location.href='/logout'" class="btn btn-primary">Logout</button>
    </div>
  </section>


  <!-- 2nd column - center - Contains div with DASHBOARDNAME , STATS , CALENDAR -->
  <section class="center-column">

    <div class="dashboard-name">
      <h1>Dashboard</h1>
    </div>

    <div class="stats-grid">

      <div class="stats-row1">

        <div class="box">
          <img src="/images/icons/contacts-grey.png">
          Total Clients
        </div>
        <div class="box">
          <img src="/images/icons/contacts-grey.png"> Open Tickets </div>
        <div class="box">
          <img src="/images/icons/contacts-grey.png"> Closed Tickets </div>

      </div>

      <div class="stats-row2">
        <div class="box">
          <img src="/images/icons/contacts-grey.png"> Time to Close</div>
        <div class="box">
          <img src="/images/icons/contacts-grey.png"> New Clients Today </div>
        <div class="box">
          <img src="/images/icons/contacts-grey.png"> Number of Messages</div>

      </div>


  </section>

  <!-- 3rd column - right - Contains div with RECENTS , CREATED TICKETS -->

  <section class="ticket-overview">

    <div class="ticket-recents">
      <h3> Open Tickets</h3>
    </div>

    <div class="created-ticket-area" class="scrollit">
      <table class="table table-hover">

        <tbody>
          {{#each tickets}}
          <tr>
            <th>{{this.title}}</th>

            <td><button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ticketDetails">
                Check ticket
              </button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </section>
</div>