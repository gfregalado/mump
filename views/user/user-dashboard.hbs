{{!-- Navbar --}}

<nav class="navbar fixed-top navbar-light bg-light">
  <a class="navbar-brand" href="/">
    <h4>Mump</h4>
  </a>
  Welcome to your Dashboard {{ userAuthenticated.firstName }} {{ userAuthenticated.lastName }}!
  {{#if userAuthenticated }}
  <button type="button" class="btn btn-danger" onclick="location.href='/logout'">
    Logout
  </button>
  {{else}}
  <button type="button" class="btn btn-primary" onclick="location.href='/login'">
    Login
  </button>

  {{/if}}
</nav>

<div class="container dashboard">

  {{!-- TABLE WITH THE TICKETS --}}

  <section class="current-ticket-dashboard">

    <div class="container ticket-container">
      <div class="page-header">
        <h1>Current Tickets</h1>
      </div>
      <div class="scroll-table">
        <table class="table table-hover" data-spy="scroll">
          <thead>
            <tr>
              <th scope="col">Title:</th>
              <th scope="col" class="hidden-sm-down">Date created:</th>
              <th scope="col">Status:</th>
              <th scope="col">Details:</th>
            </tr>
          </thead>
          <tbody>
            {{#each tickets}}
            <tr>
              <th scope="row">{{this.title}}</th>
              <td class="hidden-sm-down">{{this.createdAt}}</td>
              <td>{{this.status}}</td>
              <td><button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ticketDetails"
                  onclick="location.href='/user/ticket?ticket_id={{this._id}}'">
                Check ticket
                </button></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="ticket-creation-button">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Create
          Ticket</button>
      </div>
    </div>
  </section>
</div>

<!-- Modal Submit Ticket -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Submit a ticket</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
        <form action="/ticketcreationuser" method="POST" id="form" enctype="multipart/form-data">


          <label for="title"><strong>Title:</strong></label>
          <input type="text" name="title" required>


          <label for="description"><strong>Description:</strong></label>
          <textarea type="text" class="form-control" name="description" rows="3"></textarea>
          <br>

          <label for="imagePath">Attachments:</label>
          <input type="file" name="photo">

          <button type="submit" value="SAVE" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>